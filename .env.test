# Test Environment Configuration
NODE_ENV=test

# Database
DATABASE_URL="postgresql://test:test@localhost:5433/icms_test"

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=15
SESSION_EXPIRY_DAYS=7
REMEMBER_ME_EXPIRY_DAYS=30

# Email (for testing, use a mock service)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=test
SMTP_PASS=test
SMTP_FROM=noreply@test.com

# Redis (for testing)
REDIS_URL=redis://localhost:6379/1

# AWS S3 (for testing)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
AWS_S3_BUCKET=test-bucket

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# Logging
LOG_LEVEL=error
